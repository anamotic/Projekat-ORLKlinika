@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="sr">
<head>
    <meta charset="utf-8" />
    <title>Prijava</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        body {
            background-image: url('https://images.rawpixel.com/image_600/czNmcy1wcml2YXRlL3Jhd3BpeGVsX2ltYWdlcy93ZWJzaXRlX2NvbnRlbnQvbHIvdjg3MC10YW5nLTMzXzEuanBn.jpg');
            background-size: cover;
            background-position: center;
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            background-color: white;
            padding: 40px 30px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.25);
            width: 350px;
            text-align: center;
        }

        .login-container img.logo {
            width: 100px;
            height: auto;
            margin-bottom: 20px;
        }

        .login-container h2 {
            margin-bottom: 25px;
            color: #155724;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        label {
            display: block;
            font-weight: 600;
            margin-bottom: 6px;
            color: #155724;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 10px 12px;
            border-radius: 6px;
            border: 1px solid #a5d6a7;
            font-size: 14px;
            color: #155724;
        }

        .btn-login {
            width: 100%;
            padding: 12px;
            background-color: #2e7d32;
            border: none;
            color: white;
            font-weight: bold;
            border-radius: 6px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .btn-login:hover {
            background-color: #1b5e20;
        }

        .error-msg {
            color: red;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <img src="https://static.vecteezy.com/system/resources/previews/015/411/392/non_2x/doctor-round-avatar-medicine-flat-avatar-with-female-doctor-medical-clinic-team-round-icon-medical-collection-illustration-vector.jpg" alt="Logo" class="logo" />
        <h2>Prijava</h2>

        @if (ViewBag.Poruka != null)
        {
                    <div class="error-msg">@ViewBag.Poruka</div>
        }

        <form asp-action="Login" method="post">
            <div class="form-group">
                <label for="username">Korisničko ime</label>
                <input type="text" id="username" name="username" required />
            </div>

            <div class="form-group">
                <label for="lozinka">Lozinka</label>
                <input type="password" id="lozinka" name="lozinka" required />
            </div>

            <button type="submit" class="btn-login">Prijavi se</button>
        </form>
    </div>
</body>
</html>
